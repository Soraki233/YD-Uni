.index {
  background-color: #f3f4f5;
}
.index .classification-conatiner {
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
}
.index .classification-conatiner .classification-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90rpx;
}
.index .classification-conatiner .classification-bar .classification-image {
  width: 77rpx;
}
.index .classification-conatiner .classification-bar .classification-image image {
  width: 77rpx;
  height: 77rpx;
}
.index .classification-conatiner .classification-bar .classification-name {
  font-size: 25rpx;
  text-align: center;
}
.index .show-card-container {
  width: 700rpx;
  height: 700rpx;
  margin: 40rpx auto 0 auto;
}
.index .show-card-container .swiper-box {
  width: 700rpx;
  height: 700rpx;
}
.index .show-card-container .swiper-box .swiper-item {
  width: 700rpx;
  height: 700rpx;
}
.index .show-card-container .swiper-box .swiper-item image {
  width: 700rpx;
  height: 700rpx;
}
.index .card-swiper-title {
  margin: 20rpx 25rpx 25rpx 25rpx;
  font-weight: bold;
  margin-left: 35rpx;
  width: -webkit-fit-content;
  width: fit-content;
  border-bottom: 5rpx solid #1D6D41;
}
.index .card-swiper {
  padding: 0 25rpx 25rpx 25rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: space-between;
}
