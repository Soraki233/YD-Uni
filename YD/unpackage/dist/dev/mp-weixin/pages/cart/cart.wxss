.cart {
  min-height: 100vh;
  background-color: #f3f4f5;
}
.cart .cart-container {
  min-height: 100vh;
  display: flex;
}
.cart .cart-container .category-list {
  width: 150rpx;
  background-color: #f3f4f5;
}
.cart .cart-container .category-list .category-item {
  font-size: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 150rpx;
  width: 150rpx;
}
.cart .cart-container .category-list .category-item .category-image {
  width: 40rpx;
  height: 45rpx;
}
.cart .cart-container .category-list .category-item .category-image image {
  width: 40rpx;
  height: 40rpx;
}
.cart .cart-container .category-list .category-item .category-title {
  margin-top: 18rpx;
  color: #9999 9;
}
.cart .cart-container .details-container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  width: 100%;
}
.cart .cart-settle .cart-settle-container {
  z-index: 10;
  background-color: #212526;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  position: fixed;
  width: 700rpx;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 50rpx;
}
.cart .cart-settle .logo {
  margin-left: 40rpx;
  height: 140rpx;
  width: 140rpx;
  overflow: hidden;
  border-radius: 50%;
  position: relative;
}
.cart .cart-settle .logo image {
  height: 140rpx;
  width: 140rpx;
}
.cart .cart-settle .logo .tag {
  border-radius: 50%;
  right: 0;
  top: 20rpx;
  z-index: 10;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: red;
  color: #fff;
}
.cart .cart-settle .price {
  color: #fff;
  font-size: 36rpx;
  margin-right: 150rpx;
}
.cart .cart-settle .button {
  border-radius: 0 50rpx 50rpx 0;
  background-color: #1D6D41;
  color: #fff;
  height: 100rpx;
  width: 180rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 100rpx;
}
.cart .cart-drawer .cart-drawer-container {
  height: 100vh;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.3);
  width: 100%;
  bottom: 0;
  left: 0;
  right: 0;
}
.cart .cart-drawer .cart-drawer-container .cart-drawer-ini {
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
  height: 620rpx;
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
.cart .cart-drawer .cart-drawer-container .cart-drawer-ini .drawer-head {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.cart .cart-drawer .cart-drawer-container .cart-drawer-ini .drawer-head .clear {
  width: -webkit-fit-content;
  width: fit-content;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  color: #B2B2B2;
}
.cart .cart-drawer .cart-drawer-container .cart-drawer-ini .drawer-head .clear .clear-image {
  width: 20rpx;
  height: 20rpx;
}
.cart .cart-drawer .cart-drawer-container .cart-drawer-ini .drawer {
  height: 570rpx;
  background-color: #fff;
  overflow-y: auto;
  margin-bottom: 350rpx;
  width: 100%;
}
.cart .cart-drawer .cart-drawer-container .cart-drawer-ini .drawer::-webkit-scrollbar {
  display: none;
}
