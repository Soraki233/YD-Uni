.detail-item {
  padding: 0 20rpx;
  width: 90%;
  margin: 10rpx auto 0 auto;
  height: 220rpx;
  display: flex;
  align-items: center;
}
.detail-item .detail-image-container {
  border-radius: 10rpx;
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}
.detail-item .detail-image-container image {
  width: 200rpx;
  height: 200rpx;
}
.detail-item .detail-info-container {
  margin-left: 20rpx;
  height: 150rpx;
  width: 50%;
}
.detail-item .detail-info-container .title {
  font-size: 28rpx;
}
.detail-item .detail-info-container .price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}
.detail-item .detail-info-container .price .price-text {
  margin-top: 50rpx;
  color: orange;
  font-size: 32rpx;
  font-weight: bold;
}
