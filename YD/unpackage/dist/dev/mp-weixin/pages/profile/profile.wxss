.profile {
  background-color: #F8F8F8;
  height: 100vh;
}
.profile .userinfo-container {
  background-color: #1D6D41;
  height: 400rpx;
  border-radius: 0 0 30% 30%;
  position: relative;
  display: flex;
  padding-top: 80rpx;
  padding-left: 50rpx;
}
.profile .userinfo-container .avatar {
  border: 4rpx solid #FFFFFF;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #fff;
}
.profile .userinfo-container .avatar .avatar-image {
  width: 180rpx;
  height: 180rpx;
}
.profile .userinfo-container .info-swiper {
  margin-left: 30rpx;
  height: 180rpx;
}
.profile .userinfo-container .info-swiper .user-name {
  color: #fff;
  font-weight: bold;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.profile .userinfo-container .info-swiper .store-name {
  font-weight: 600;
  font-size: 26rpx;
  background-color: orange;
  padding: 0 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 20rpx;
  color: #fff;
}
.profile .options-container {
  z-index: 100;
  background-color: #fff;
  margin-top: -100rpx;
  border-radius: 60rpx;
  overflow: hidden;
}
.profile .options-container .options-group {
  background-color: #fff;
  border-radius: 60rpx;
}
.profile .options-container .options-group .option {
  padding-left: 70rpx;
  background-color: #fff;
  position: relative;
  font-weight: normal;
  color: #272C2F;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  height: 100rpx;
  line-height: 100rpx;
}
.profile .options-container .options-group .option .option-icon {
  padding-right: 25rpx;
  width: 40rpx;
  height: 40rpx;
}
.profile .options-container .options-group .option .enter-icon {
  position: absolute;
  right: 30rpx;
  width: 35rpx;
  height: 35rpx;
}
.profile .version-info {
  position: absolute;
  bottom: 15rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #999999;
  font-size: 18rpx;
}
